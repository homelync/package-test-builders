{
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "rules": {
    "curly": 0,
    "no-lonely-if": 1,
    "no-mixed-requires": 0,
    "no-underscore-dangle": 0,
    "no-unused-vars": [2, {
      "vars": "all",
      "args": "after-used"
    }],
    "no-use-before-define": [2, "nofunc"],
    "quotes": 0,
    "semi": [2, "always"],
    "space-infix-ops": 0,
    "strict": 0,
    "max-len": [1, 160, 2]
  }
}
